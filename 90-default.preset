# tpg@mandriva.org
# By default all services are enabled in their rpm packages
# anyways just override it here

# systemd stuff
enable remote-fs.target
enable systemd-readahead-replay.service
enable systemd-readahead-collect.service

# Enable ACPI daemon
enable acpid.*

# Enable udev service
enable systemd-udev*.service

# Enable udisk service
enable udisks2.service

# Enable upower service
enable upower.service

# Enable polkit service
enable polkit.service

# Enable Avahi by default
enable avahi*.service

# Enable mandriva services
enable mandriva-everytime.service

# Enable NM by default
enable NetworkManager.service
enable NetworkManager-dispatcher.service
enable ModemManager.service

# Enable other system services
enable sshd.service
enable atd.*
enable crond.*
enable chronyd.service
enable rpcbind.*
enable bluetooth.*
enable cups.*
enable rsyslog.*
enable syslog-ng.*
enable sysklogd.*
enable accounts-daemon.service
enable rtkit-daemon.service
enable usbmuxd.service

# Network services
enable iptables.service
enable nmb.service
enable smb.service
enable winbind.service
enable realmd.service
enable xinetd.service

# Storage services
enable multipathd.service
enable lvm2-monitor.*
enable lvm2-lvmetad.*
enable dm-event.*
enable mdmonitor.service
enable mdmonitor-takeover.service

# Hardware services
enable irqbalance.service
enable lm_sensors.service
enable uuidd.*
enable gpm.*
enable cpupower.service

# Sound services
enable alsa*.service
enable sound.service
